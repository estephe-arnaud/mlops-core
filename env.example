# Configuration de l'environnement pour l'API MLOps
# Copiez ce fichier vers .env et ajustez les valeurs

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Configuration
MODEL_PATH=models/iris_model.pkl
MODEL_METADATA_PATH=models/model_metadata.json

# Development
DEBUG=true
ENVIRONMENT=development

# Docker
DOCKER_IMAGE_NAME=iris-api
DOCKER_TAG=latest
DOCKER_PORT=8000
